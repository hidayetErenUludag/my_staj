import socket
import threading
from enum import Enum

HOST = "127.0.0.1"
PORT = 5555
MAX_BYTE = 1024
SERVER_ID = 1
Train_move = False
def run(host, port):

    try:
        server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        server.bind((host, port))
        server.listen(5)
    except Exception as e:
        print(e)
        return

    while True:
        try:
            client_socket, addr = server.accept()
            print(1)
            client_thread = threading.Thread(target=client_handler, args=(client_socket,))
            print(2)
            client_thread.start()
            print(3)
        except Exception as  e:
            print(f"Error {e}")



def send_message_to_client(client_socket, message):
    try:
        client_socket.send(message)
    except Exception as e:
        print(f"Mesaj g√∂nderilemedi. {e}")

def client_handler(client_socket):
    while True:
        try:
            message = client_socket.recv(MAX_BYTE)
            print(1.1)
            de_message = message.decode()
            print(de_message)
            if MessageType(de_message) == 1:
                Train_move = True
            else:
                Train_move = False
            if message:
                print(MessageType(de_message))
        except:
            print("Error")



def input(condition):
    while True:
        #Condition will be implamenteed later
        pass




class MessageType(Enum):
    move = 1
    stop = 2

def main():
    threading.Thread(target=run, args=(HOST, PORT)).start()




